@model ShpalljeOnline.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Shpallje Online - Kyqu";
}


<form action="/Account/Login" method="POST" class="login-page mx-auto" style="margin-top: 5%; width: 300px;">
    @Html.AntiForgeryToken()
    <h3 class="text-info" style="text-align: center;">Kyqu</h3>
    <div class="form-row ">
        <div class="form-group col-md-12">
            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Email)
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>

        <button type="submit" class="btn btn-info col-md-12">Kyqu</button>
        @if (ViewBag.InvalidData == true)
        {
            <p class="field-validation-error" style="margin: 10px auto;">Emaili ose Fjalekalimi nuk eshte valid</p>
        }
    </div>
</form>