@model ShpalljeOnline.Models.Post
@{
    ViewBag.Title = "Shpallje Online - Detajet";
}

<div class="container mt-5">
    <div class="row">
        <div class="row col-12 d-flex justify-content-between justify-different pr-0 pl-0">
            <h3 style="padding-left: 0;" class="details-title col-12 col-sm-12 col-md-7 col-lg-7 col-xl-7 ">@Model.Title</h3>
            @if (Model.UserID == ViewBag.UserID)
            {
                <div>
                    <a href="/Post/Edit/@Model.PostID" class="col-2 text-info p-0 mr-2" style="text-decoration:none;">
                        <span id="txt1">Edito</span><i class="material-icons text-info" style="font-size:35px;">edit</i>
                    </a>
                    <a href="#" class="col-2 text-danger p-0" style="text-decoration:none;" data-toggle="modal" data-target="#exampleModal">
                        <span id="txt1">Fshij</span><i class="material-icons text-danger" style="font-size:35px;">delete</i>
                    </a>
                </div>
            }
        </div>

        <p style="padding-left:0; margin-bottom:0;" class="postuar-me col-12">Postuar më: <span style="font-weight:600;">@Model.Date.Value.ToString("MM-dd-yyyy, HH:mm")</span> ne Kategorine <a class="text-info" href="/Home/Index?categoryID=@Model.CategoryID">@Model.Category.CategoryName</a></p>
        <p style="padding-left: 0;" class="nga col-6">Nga: @Model.User.Name @Model.User.Surname</p>

        <div class="location2 col-6" style="text-align:right;">
            <i class="material-icons text-info" style="font-size:20px;">location_on</i>
            <p class="" style="display:inline;">@Model.Location.LocationName</p>
        </div>

        <div class="col-12 bg-info p-3 text-white">
            <h4 class="col-12">Info:</h4>
            <i class="material-icons text-white col-1" style="font-size:28px;">call</i>
            <h5 class="det-infos col-10 col-md-5  d-inline-block">Telefoni: @Model.Info.PhoneNr</h5>
            <i class="material-icons text-white col-1" style="font-size:28px;">email</i>
            <h5 class="det-infos col-10 col-md-8 d-inline">Email: @Model.Info.Email</h5>
        </div>
        <div class="row mt-3 mb-5" style="width:100%;">
            <div class="img-above col-lg-6 col-md-12 pl-0">
                @if (Model.Photo != null)
                {
                    <img class="postdetails-img" src="data:image;base64,@Model.Photo" width="100%" height="500px" />
                }
                else
                {
                    <img class="postdetails-img" src="~/Images/no-image.png" width="100%" height="500px" />
                }
            </div>
            <div class="details-permbajtja col-lg-6 col-md-12" style="background-color: white; border: 1px solid #e9e9e9; padding: 20px;">
                <h4 class="permbajtja col-12">Permbajtja</h4>
                <p class="permbajtja-text col-12">@Model.Description</p>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">A jeni i sigurte qe deshironi ta fshini kete shpallje?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Jo</button>
                <form method="post" action="/Post/Delete/@Model.PostID">
                    <button class="btn btn-danger text-white">Po, i sigurte</button>
                </form>
            </div>
        </div>
    </div>
</div>



